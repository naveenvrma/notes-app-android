<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.AddNoteActivity">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:id="@+id/add_appbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="@color/colorPrimary"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <ImageView
                        android:id="@+id/back_btn"
                        android:layout_width="@dimen/size_tool_bar_icon"
                        android:layout_height="@dimen/size_tool_bar_icon"
                        android:padding="@dimen/padding_10"
                        android:src="@drawable/ic_back"
                        android:background="?attr/selectableItemBackground"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:id="@+id/main_title"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:ellipsize="marquee"
                        android:gravity="center"
                        android:padding="@dimen/padding_10"
                        android:singleLine="true"
                        android:text="ADD NOTES"
                        android:textAllCaps="true"
                        android:textStyle="bold"
                        android:textColor="@color/white_color"
                        android:textSize="@dimen/txt_20" />
                    <ImageView
                        android:id="@+id/tool_save_btn"
                        android:layout_width="@dimen/size_tool_bar_icon"
                        android:layout_height="@dimen/size_tool_bar_icon"
                        android:layout_alignParentEnd="true"
                        android:padding="@dimen/padding_10"
                        android:src="@drawable/ic_save"
                        android:background="?attr/selectableItemBackground"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
            </FrameLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/margin_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_20"
            android:orientation="vertical">
            <Spinner
                android:id="@+id/category_spinner"
                style="@style/SpinnerTheme"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_40"
                android:textAlignment="center" />
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txtTitle"
                android:theme="@style/TextLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10"
                android:layout_marginBottom="@dimen/margin_10">
                <androidx.appcompat.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Note Title"
                    android:inputType="textCapSentences|textMultiLine"
                    android:textSize="@dimen/text_18"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txtInfo"
                android:theme="@style/TextLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_10">
                <androidx.appcompat.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Note Info"
                    android:inputType="textCapSentences|textMultiLine"
                    android:textSize="@dimen/text_18"/>
            </com.google.android.material.textfield.TextInputLayout>
            
            <RelativeLayout
                android:id="@+id/lv_photo_view"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginBottom="@dimen/margin_10"
                android:background="@drawable/img_back_stroke">
                <ImageView
                    android:id="@+id/photoView"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:scaleType="centerCrop"/>
                <ImageView
                    android:id="@+id/playBtn"
                    android:layout_width="@dimen/margin_50"
                    android:layout_height="@dimen/margin_50"
                    android:padding="@dimen/margin_5"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_play"
                    android:tint="@color/colorPrimary"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/selectPhotoBtn"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/margin_40"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/margin_5"
                    android:background="@color/colorPrimary"
                    android:text="select photo"
                    android:textColor="@color/white_color"/>
                <Button
                    android:id="@+id/recordBtn"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/margin_40"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/margin_5"
                    android:background="@color/colorPrimary"
                    android:text="record audio"
                    android:textColor="@color/white_color"/>
            </LinearLayout>
            <fragment
                android:id="@+id/location_map"
                class="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/margin_10"
                android:layout_height="150dp" />
            <TextView
                android:id="@+id/txtLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10"
                android:gravity="center"
                android:text="Current Location"
                android:textColor="@color/black_color"/>
            <Button
                android:id="@+id/saveBtn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_40"
                android:layout_marginTop="@dimen/margin_10"
                android:layout_marginBottom="@dimen/margin_20"
                android:background="@color/colorPrimary"
                android:text="save"
                android:textColor="@color/white_color"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>